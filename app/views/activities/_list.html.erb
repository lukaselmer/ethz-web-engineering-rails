<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Start at</th>
    <th>Meetup group</th>
  </tr>
  </thead>

  <tbody>
  <% activities.each do |activity| %>
    <tr>
      <td><%= link_to activity.name, activity %></td>
      <td><%= activity.location %></td>
      <td><%= activity.start_at.to_s(:long) %></td>
      <td><%= link_to activity.meetup_group, activity.meetup_group %></td>
    </tr>
  <% end %>
  </tbody>
</table>
