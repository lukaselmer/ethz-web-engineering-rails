<%= simple_form_for(@meetup_group) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :topic %>
    <%= f.input :incepted_at, as: :string, input_html: {class: 'datepicker'} %>
    <%= f.input :home_town %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
    <%= link_to 'Back', (@meetup_group.new_record? ? meetup_groups_path : @meetup_group), class: 'btn btn-default' %>
  </div>
<% end %>
